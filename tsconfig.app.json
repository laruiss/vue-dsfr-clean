{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["node_modules", "src/**/__tests__/*", "src/**/*.spec.ts", "src/**/*.e2e.ts", "src/**/*.stories.ts"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "./types",
    "rootDir": "./src",
    "paths": {
      "@/*": ["./src/*"],
      "@tests/*": ["./tests/*"]
    }
  }
}
